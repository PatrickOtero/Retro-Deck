{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,      
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "copyStatic.js", 
    "src/knexfile.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}